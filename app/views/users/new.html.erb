<% provide(:title, t("views.new.signup")) %>
<h1><%= t("views.new.signup") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render "shared/error_messages" %>
        <%= f.label :name, t("views.new.name") %>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
        <%= f.label :password, t("views.new.password") %>
        <%= f.password_field :password, class: "form-control" %>
        <%= f.label :password_confirmation, t("views.new.confirm_password") %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
        <%= f.submit t("views.new.create_account"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
