<% provide(:title, t("views.title.login")) %>
<h1><%= t("views.title.login") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :email, t("views.new.name") %>
    <%= f.email_field :email, class: "form-control" %>
    <%= f.label :password, t("views.new.password") %>
    <%= link_to "(fogot password)", new_password_reset_path %>
    <%= f.password_field :password, class: "form-control" %>
    <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "views.login.remember" %></span>
    <% end %>
    <%= f.submit t("views.title.login"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t "views.login.new_user" %> <%= link_to t("views.home.signup"), new_user_path %></p>
  </div>
</div>
