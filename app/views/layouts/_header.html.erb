<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("views.home.sample_app"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("views.title.home"), "/" %></li>
        <li><%= link_to t("views.title.help"), "/help" %></li>
        <% if logged_in? %>
          <li><%= link_to t("views.title.user"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "views.title.account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("views.title.profile"), user_path(id: current_user.id) %></li>
              <li><%= link_to t("views.title.setting"), edit_user_path(id: current_user.id) %></li>
              <li class="divider"></li>
              <li>
              <%= link_to t("views.title.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("views.title.login"), login_path %></li>
        <% end %>
        <li><%= link_to t("english"), locale: :en %></li>
        <li><%= link_to t("vietnamese"), locale: :vi %></li>
      </ul>
    </nav>
  </div>
</header>
