<% provide :title, t("views.title.forgot_password") %>
<h1><%= t "views.title.forgot_password" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :password_reset, url: password_resets_path do |f| %>
      <%= f.label : t("views,title.email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.submit t("views.new.send"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
